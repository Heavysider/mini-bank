<!-- Modal -->
<%= render "payment_modal" %>
<div class="container text-center mt-5">
  <div class="row">
    <%= render "user_info" %>
    <div class="col">
      <div class="row mb-3">
        <div class="col">
          <div class="d-grid">
            <button class="btn btn-warning" type="button" data-bs-target="#payNow" data-bs-toggle="modal">â†‘ Pay</button>
          </div>
        </div>
      </div>
      <div class="row row-cols-2">
        <% current_user.bank_accounts.each do |bank_account| %>
          <div class="col">
            <div class="d-grid">
              <%= link_to user_bank_account_path(current_user, bank_account), class: "btn btn-primary py-3 text-start" do %>
                <div class="row row-cols-2">
                  <div class="col-8 text-start" id="account-name-iban"><%= bank_account.name %> - <%= bank_account.iban %></div>
                  <div class="col-4 text-end"><%= humanized_money_with_symbol bank_account.balance %></div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
