<!DOCTYPE html>
<html data-bs-theme="dark">
  <head>
    <title>DigidentityBankApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bc-green">
    <%= render "navbar" %>
    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert" data-controller='flash-message'>
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-action="click->flash-message#close" aria-label="Close"></button>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert" data-controller='flash-message'>
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-action="click->flash-message#close" aria-label="Close"></button>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
